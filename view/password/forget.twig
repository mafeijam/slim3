{% extends 'default.twig' %}

{% block body %}
   <div class="row">
      <div class="col-lg-4 col-sm-6 col-lg-offset-4 col-sm-offset-3">
         <div class="panel panel-info{{ errors ? ' animated shake' : ''}}">

            <div class="panel-heading" style="font-size: 150%; text-align: center;">忘記密碼</div>

            <div class="panel-body">

               <form action="/forget" method="post" autocomplete="off">
                  {{ csrf_field | raw }}

                  <div class="form-group">
                     <label class="form-label" for="email">電郵</label>
                     <div class="input-group has-feedback {{ errors.email ? 'has-error' : ''}}">
                        <span class="input-group-addon"><i class="fa fa-envelope-o w-30"></i></span>
                        <input class="form-control" type="text" name="email" id="email" value="{{ old.email }}">
                        {% if errors.email %}
                           <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        {% endif %}
                     </div>
                     {% if errors.email %}
                        <span class="help-block">
                           <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ errors.email | first }}
                        </span>
                     {% endif %}

                  </div>

                  <div class="t-right">
                     <button class="btn btn-primary"><i class="fa fa-paper-plane mr-7"></i>發送重設密碼連結</button>
                  </div>

               </form>
            </div> <!-- end panel body -->
         </div> <!-- end panel -->
      </div> <!-- end col -->
   </div> <!-- end row -->
   <script src="{{ base_url() }}/js/form.js"></script>
{% endblock %}