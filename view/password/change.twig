{% extends 'default.twig' %}

{% block body %}
   <div class="row">

      <div class="col-md-4">
         {% include 'partial/user-profile.twig' %}
      </div>

      <div class="col-md-8">
         <div class="panel panel-default">
            <div class="panel-heading">更改密碼</div>
            <div class="panel-body">
               <form action="/change-password" method="post" autocomplete="off">
                  {{ csrf_field | raw }}
                  <div class="form-group">
                     <label style="font-size: 110%; margin-bottom: 10px;" for="password">舊密碼</label>
                     <div class="input-group has-feedback {{ errors.password ? 'has-error' : ''}}">
                        <span class="input-group-addon"><i class="fa fa-lock w-30"></i></span>
                        <input class="form-control" type="password" name="password" id="password">
                        {% if errors.password %}
                           <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        {% endif %}
                     </div>
                     {% if errors.password %}
                        {% set message = errors.password %}
                        {% include 'partial/help-block.twig' with message %}
                     {% endif %}
                  </div>

                  <div class="form-group">
                     <label style="font-size: 110%; margin-bottom: 10px;" for="new_password">新密碼</label>
                     <div class="input-group has-feedback {{ errors.new_password ? 'has-error' : ''}}">
                        <span class="input-group-addon"><i class="fa fa-key w-30"></i></span>
                        <input class="form-control" type="password" name="new_password" id="new_password">
                        {% if errors.new_password %}
                           <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        {% endif %}
                     </div>
                     {% if errors.new_password %}
                        {% set message = errors.new_password %}
                        {% include 'partial/help-block.twig' with message %}
                     {% endif %}
                  </div>

                  <div class="form-group">
                     <label style="font-size: 110%; margin-bottom: 10px;" for="password_cfm">新密碼確認</label>
                     <div class="input-group has-feedback {{ errors.password_cfm ? 'has-error' : ''}}">
                        <span class="input-group-addon"><i class="fa fa-key w-30"></i></span>
                        <input class="form-control" type="password" name="password_cfm" id="password_cfm">
                        {% if errors.password_cfm %}
                           <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        {% endif %}
                     </div>
                     {% if errors.password_cfm %}
                        {% set message = errors.password_cfm %}
                        {% include 'partial/help-block.twig' with message %}
                     {% endif %}
                  </div>

                  <div class="t-right">
                     <button class="btn btn-primary"><i class="fa fa-check mr-7"></i>確認</button>
                  </div>
               </form>
            </div>
         </div>
      </div>

   </div>
   <script src="/js/form.js"></script>

{% endblock %}