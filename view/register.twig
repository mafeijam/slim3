{% extends 'default.twig' %}
{% import 'macro.twig' as m %}

{% block body %}
   <div class="row">
      <div class="col-lg-4 col-sm-6 col-lg-offset-4 col-sm-offset-3">
         <div class="panel panel-info{{ errors ? ' animated shake' : ''}}">

            <div class="panel-heading" style="font-size: 150%; text-align: center;">會員註冊</div>

            <div class="panel-body">
               <form action="/register" method="post" autocomplete="off">
                  {{ csrf_field | raw }}

                  {{ m.formGroup(errors.username, '使用者名稱', 'user', 'username', old.username) }}

                  {{ m.formGroup(errors.email, '電郵', 'envelope-o', 'email', old.email) }}

                  {{ m.formGroup(errors.password, '密碼', 'key', 'password', '', 'password') }}

                  {{ m.formGroup(errors.password_cfm, '確認密碼', 'key', 'password_cfm', '', 'password') }}

                  <div class="t-right">
                     <button class="btn btn-primary"><i class="fa fa-check mr-7"></i>註冊</button>
                  </div>
               </form>
            </div> <!-- end panel body -->
         </div> <!-- end panel -->
      </div> <!-- end col -->
   </div> <!-- end row -->

   <script src="{{ base_url() }}/js/form.js"></script>
{% endblock %}
