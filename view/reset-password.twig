{% extends 'default.twig' %}

{% block body %}
   <div class="row">
      <div class="col-lg-4 col-sm-6 col-lg-offset-4 col-sm-offset-3">
         <div class="panel panel-info">
            <div class="panel-heading" style="font-size: 150%; text-align: center;">更改密碼</div>
            <div class="panel-body">
               <form action="/reset" method="post" autocomplete="off">
                  {{ csrf_field | raw }}

                  <input type="hidden" name="reset_token" value="{{ reset_token }}">

                  <div class="form-group">
                     <label class="form-label" for="password">新密碼</label>
                     <div class="input-group has-feedback {{ errors.new_password ? 'has-error' : ''}}">
                        <span class="input-group-addon"><i class="fa fa-key w-30"></i></span>
                        <input class="form-control" type="password" name="password" id="password">
                        {% if errors.password %}
                           <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        {% endif %}
                     </div>
                     {% if errors.password %}
                        <span class="help-block">
                           <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ errors.password | first }}
                        </span>
                     {% endif %}
                  </div>

                  <div class="form-group">
                     <label class="form-label" for="password_cfm">新密碼確認</label>
                     <div class="input-group has-feedback {{ errors.password_cfm ? 'has-error' : ''}}">
                        <span class="input-group-addon"><i class="fa fa-key w-30"></i></span>
                        <input class="form-control" type="password" name="password_cfm" id="password_cfm">
                        {% if errors.password_cfm %}
                           <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                        {% endif %}
                     </div>
                     {% if errors.password_cfm %}
                        <span class="help-block">
                           <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ errors.password_cfm | first }}
                        </span>
                     {% endif %}
                  </div>

                  <div class="t-right">
                     <button class="btn btn-primary"><i class="fa fa-check mr-7"></i>確認</button>
                  </div>
               </form>
            </div>
         </div>
         {% if errors.reset %}
            <div class="alert alert-danger" style="text-align: center;" role="alert">
               <span class="fa fa-exclamation-circle" aria-hidden="true"></span> {{ errors.reset }}
            </div>
         {% endif %}
      </div>
   </div>
   <script src="/js/form.js"></script>
{% endblock %}